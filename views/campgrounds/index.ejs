<% layout('layouts/boilerplate') %>
<div id='clusterMap'></div>
<div class='container'>	
<h1 class='my-3 text-center cgIdxHeader'>All Campgrounds!</h1>
	<% for(let campground of campgrounds) {%>
		<div class='card mb-3 cgIdxCard'>
			<div class='row'>
				<div class='col-md-4 d-flex flex-column justify-content-around align-items-center'>
					<% if (campground.images.length) { %>
					<h3 class='card-title text-center my-2'><%=campground.title%></h3>
					<img class='img-fluid px-2' alt='' src='<%=campground.images[0].url%>'>
					<% } else { %> 
					<h3 class='card-title'><%=campground.title%></h3>
					<img class='img-fluid px-2' alt='' src='https://res.cloudinary.com/thatcloudisbuff/image/upload/v1603155882/Yelpcamp/lkm3aaybs
167ulqqnm81.jpg'>
					<% } %> 
				</div>
				<div class='col-md-8'>
					<div class='card-body'>
						<p class='card-text'>
							<%= campground.description.slice(0, 175) + "..." %>
						</p>
						<p class='card-text'>
							<small class='text-muted'><%=campground.location%></small>
						</p>
						<a href='/campgrounds/<%=campground._id%>' class='btn cgIdxViewCgBtn'>View <%=campground.title%></a>
					</div>
				</div>
			</div>
		</div>
	<% } %>
</div>
<script>
	const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
	const campgrounds = {features: <%- JSON.stringify(campgrounds) %>}
</script>
<script src='/javascripts/clusterMap.js'></script>